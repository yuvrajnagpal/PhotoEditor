<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Menu">

    <ImageView
            android:layout_width="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_height="429dp" app:srcCompat="@drawable/paint"
            android:id="@+id/painticon" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:scaleType="fitCenter"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/painticon" android:src="@drawable/ic_add_black_24dp"
            android:id="@+id/addnew" app:backgroundTint="@color/colorPrimaryDark"/>


    <android.support.design.widget.FloatingActionButton
            android:layout_width="55dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="55dp"
            android:src="@drawable/ic_photo_library_black_24dp"
            android:id="@+id/drawings"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/painticon"
            app:backgroundTint="@color/colorPrimaryDark"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_photo_black_24dp"
            android:id="@+id/gallery"
            app:backgroundTint="@color/colorPrimaryDark"
            tools:ignore="VectorDrawableCompat"
            app:layout_constraintStart_toEndOf="@+id/addnew" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/drawings" android:layout_marginRight="8dp"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/painticon"/>
    <TextView
            android:text="New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary" android:textSize="18sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addnew" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
    />
    <TextView
            android:text="gallery"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/gallery"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginLeft="117dp"
            android:layout_marginStart="117dp" android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"/>
    <TextView
            android:text="Drawings"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/drawings" android:layout_marginLeft="105dp"
            android:layout_marginStart="105dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" android:textSize="18sp" android:textStyle="bold|italic"
            android:textColor="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>